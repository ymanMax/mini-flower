/* 收藏商品列表 */
.collect-list {
  padding: 20rpx 30rpx;
  background: #fafafa;
  min-height: 100vh;
}

.collect-item {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 商品图片 */
.goods-image {
  width: 100%;
  height: 400rpx;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.goods-image image {
  width: 100%;
  height: 100%;
}

/* 商品信息 */
.goods-info {
  margin-bottom: 20rpx;
}

.goods-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.goods-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.goods-sales {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.goods-price {
  display: flex;
  align-items: baseline;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.current-price {
  font-size: 36rpx;
  font-weight: 600;
  color: #ff6b6b;
}

.original-price {
  font-size: 26rpx;
  color: #999;
  text-decoration: line-through;
}

.collect-time {
  font-size: 24rpx;
  color: #999;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
}

.add-cart-btn {
  flex: 1;
  background: #ff6b6b !important;
  border-radius: 8rpx !important;
  font-size: 26rpx !important;
}

.cancel-collect-btn {
  flex: 1;
  border: 1rpx solid #ff6b6b !important;
  color: #ff6b6b !important;
  border-radius: 8rpx !important;
  font-size: 26rpx !important;
}

/* 加载遮罩 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 999;
  color: #fff;
  font-size: 28rpx;
}

.loading-overlay text {
  margin-top: 20rpx;
}