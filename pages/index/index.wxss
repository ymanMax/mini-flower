.iswiper-item{height:200px;border:1px solid}

.service-category {
  padding: 15px;
  box-sizing: border-box;
}

.category-title {
  margin-bottom: 15px;
  font-weight: bold;
}

.service-list {
  padding: 0 10px;
}

.service-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25%;
  margin-bottom: 15px;
}

.service-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-bottom: 8rpx;
}

.service-name {
  color: #666;
  text-align: center;
}

