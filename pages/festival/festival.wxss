.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 20rpx;
}

.page-header {
  background-color: #fff;
  padding: 30rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.subtitle {
  display: block;
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #666;
}

.festival-list {
  padding: 0 20rpx;
}

.festival-item {
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.festival-image {
  width: 100%;
  height: 300rpx;
  object-fit: cover;
}

.festival-info {
  padding: 30rpx;
}

.festival-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.gift-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.festival-tag {
  background-color: #ff6b6b;
  color: #fff;
  padding: 5rpx 12rpx;
  border-radius: 15rpx;
  font-size: 22rpx;
}

.gift-price {
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.price {
  font-size: 32rpx;
  color: #c03131;
  font-weight: bold;
}

.pre-sale-tag {
  background-color: #ffd43b;
  color: #333;
  padding: 5rpx 12rpx;
  border-radius: 15rpx;
  font-size: 22rpx;
}

.gift-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 20rpx;
}

.delivery-info {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.delivery-label {
  color: #999;
}

.delivery-value {
  color: #666;
}

.order-btn {
  background-color: #c03131;
  color: #fff;
  border-radius: 50rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  border: none;
}

.order-btn::after {
  border: none;
}
