/* pages/diary/index.wxss */
.diary-index {
  background: #f5f5f5;
  min-height: 100vh;
}

.diary-header {
  padding: 20rpx;
  display: flex;
  justify-content: flex-end;
}

.add-btn {
  background: #c03131;
  border: none;
}

.add-btn::after {
  border: none;
}

.diary-list {
  padding: 0 20rpx 20rpx;
}

.diary-item {
  background: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.diary-images {
  display: flex;
  flex-wrap: wrap;
}

.diary-image {
  width: 33.33%;
  height: 200rpx;
}

.diary-content {
  padding: 30rpx;
}

.diary-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.diary-date {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 15rpx;
}

.diary-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.diary-tags {
  display: flex;
  flex-wrap: wrap;
}

.diary-tags .van-tag {
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.empty-state {
  padding: 100rpx 0;
  text-align: center;
}

.empty-add-btn {
  background: #c03131;
  border: none;
  margin-top: 40rpx;
}

.empty-add-btn::after {
  border: none;
}
