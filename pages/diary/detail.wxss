/* pages/diary/detail.wxss */
.diary-detail {
  background: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

.diary-content {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.diary-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  line-height: 1.4;
}

.diary-date {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.diary-images {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 30rpx;
}

.diary-image {
  width: 100%;
  height: 400rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}

.diary-text {
  font-size: 30rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 30rpx;
}

.diary-tags {
  padding-top: 30rpx;
  border-top: 1rpx solid #eee;
}

.tags-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.tags-list {
  display: flex;
  flex-wrap: wrap;
}

.tags-list .van-tag {
  margin-right: 15rpx;
  margin-bottom: 15rpx;
}

.diary-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx;
  border-top: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
}

.action-btn {
  flex: 1;
  margin: 0 10rpx;
  height: 70rpx;
  line-height: 70rpx;
}
