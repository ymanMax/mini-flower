/* pages/identify/index.wxss */
.identify-page {
  background: #f5f5f5;
  min-height: 100vh;
}

.identify-content {
  padding: 40rpx 20rpx;
}

.upload-section {
  margin-bottom: 40rpx;
}

.upload-area {
  background: #fff;
  border: 2rpx dashed #ddd;
  border-radius: 10rpx;
  padding: 80rpx 40rpx;
  text-align: center;
}

.upload-text {
  font-size: 32rpx;
  color: #333;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
}

.upload-hint {
  font-size: 24rpx;
  color: #999;
}

.image-preview {
  background: #fff;
  border-radius: 10rpx;
  padding: 40rpx;
  text-align: center;
}

.preview-image {
  width: 100%;
  height: 400rpx;
  margin-bottom: 40rpx;
}

.image-actions {
  display: flex;
  justify-content: space-between;
}

.action-btn {
  flex: 1;
  margin: 0 10rpx;
}

.identify-result {
  background: #fff;
  border-radius: 10rpx;
  padding: 40rpx;
}

.result-header {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
}

.result-header .van-icon {
  margin-right: 15rpx;
}

.result-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.result-content {
  display: flex;
  margin-bottom: 40rpx;
}

.result-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
  margin-right: 30rpx;
}

.result-info {
  flex: 1;
}

.flower-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.flower-confidence {
  font-size: 26rpx;
  color: #07c160;
  margin-bottom: 15rpx;
}

.flower-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

.result-actions {
  display: flex;
  justify-content: space-between;
}

.result-actions .action-btn {
  flex: 1;
  margin: 0 10rpx;
}
