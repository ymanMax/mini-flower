/* pages/preferences/preferences.wxss */
.preferences-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.section {
  background-color: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.checkbox-row {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.checkbox-row .van-checkbox {
  margin-right: 0;
  margin-bottom: 10rpx;
}

.radio-row {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.radio-row .van-radio {
  margin-right: 0;
}

.price-range {
  padding: 20rpx 0;
}

.price-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  text-align: center;
}

.button-section {
  padding: 30rpx;
  background-color: white;
  border-radius: 12rpx;
  margin-top: 40rpx;
}

.button-section .van-button {
  margin-bottom: 20rpx;
}

.button-section .reset-button {
  margin-bottom: 0;
}

/* 响应式调整 */
@media screen and (max-width: 375px) {
  .section {
    padding: 25rpx;
  }

  .section-title {
    font-size: 28rpx;
  }

  .checkbox-row {
    gap: 15rpx;
  }
}
