/* pages/knowledge/base.wxss */
.search-bar {
  margin: 20rpx;
}

.flower-category {
  padding: 20rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
  background: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.category-image {
  width: 100%;
  height: 300rpx;
}

.category-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  padding: 20rpx 20rpx 10rpx;
}

.category-desc {
  font-size: 28rpx;
  color: #666;
  padding: 0 20rpx 20rpx;
  line-height: 1.5;
}

.care-category {
  padding: 20rpx;
}

.faq-list {
  padding: 20rpx;
}

.faq-item {
  background: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.faq-question {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.faq-answer {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

.faq-item .van-icon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}
