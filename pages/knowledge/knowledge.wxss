.knowledge-container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

.disease-list, .pest-list {
  padding: 20rpx;
}

.disease-title, .pest-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.disease-symptom, .pest-symptom {
  font-size: 24rpx;
  color: #666;
}

.detail-popup {
  padding: 30rpx;
}

.popup-title {
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
  color: #333;
}

.popup-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
  color: #333;
}

.section-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}
