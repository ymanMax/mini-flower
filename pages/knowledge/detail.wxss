/* pages/knowledge/detail.wxss */
.knowledge-detail {
  background: #f5f5f5;
  min-height: 100vh;
}

.flower-image {
  width: 100%;
  height: 400rpx;
}

.flower-info {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.flower-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.flower-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

.detail-tabs {
  background: #fff;
  margin-bottom: 20rpx;
}

.info-content {
  padding: 20rpx;
}

.care-content {
  padding: 20rpx;
}

.collapse-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  padding: 10rpx 0;
}

.faq-content {
  padding: 20rpx;
}

.faq-item {
  margin-bottom: 30rpx;
  background: #f9f9f9;
  border-radius: 10rpx;
  padding: 25rpx;
}

.faq-question {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.faq-answer {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}
