.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  padding: 40rpx;
}

.plant-list {
  padding: 20rpx;
}

.plant-item {
  margin-bottom: 20rpx;
}

.plant-header {
  display: flex;
  align-items: center;
}

.plant-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.plant-info {
  flex: 1;
}

.plant-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.plant-variety {
  font-size: 24rpx;
  color: #999;
}

.plant-details {
  margin-top: 16rpx;
}

.detail-item {
  margin-bottom: 12rpx;
  font-size: 26rpx;
}

.label {
  color: #666;
}

.value {
  color: #333;
}

.care-reminders {
  margin-top: 12rpx;
}

.reminder-tag {
  margin-right: 8rpx;
  margin-bottom: 8rpx;
}
