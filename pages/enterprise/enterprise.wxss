.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 20rpx;
}

.page-header {
  background-color: #fff;
  padding: 30rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.subtitle {
  display: block;
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #666;
}

.enterprise-list {
  padding: 0 20rpx;
}

.enterprise-item {
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.enterprise-image {
  width: 100%;
  height: 300rpx;
  object-fit: cover;
}

.enterprise-info {
  padding: 30rpx;
}

.enterprise-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.enterprise-price {
  margin-bottom: 20rpx;
}

.price {
  font-size: 32rpx;
  color: #c03131;
  font-weight: bold;
}

.area {
  font-size: 24rpx;
  color: #666;
  margin-left: 10rpx;
}

.enterprise-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 20rpx;
}

.enterprise-details {
  margin-bottom: 30rpx;
}

.detail-item {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.detail-label {
  color: #999;
}

.detail-value {
  color: #666;
}

.order-btn {
  background-color: #c03131;
  color: #fff;
  border-radius: 50rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  border: none;
}

.order-btn::after {
  border: none;
}
