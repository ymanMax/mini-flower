/* 订单列表 */
.order-list {
  padding: 20rpx 30rpx;
  background: #fafafa;
  min-height: 100vh;
}

.order-item {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #f8f9fa;
  border-bottom: 1rpx solid #f0f0f0;
}

.order-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.order-id {
  font-size: 26rpx;
  color: #333;
}

.order-time {
  font-size: 24rpx;
  color: #999;
}

.order-status {
  font-size: 26rpx;
  font-weight: 600;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.order-status.待支付 {
  background: #fff3cd;
  color: #856404;
}

.order-status.待发货 {
  background: #d1ecf1;
  color: #0c5460;
}

.order-status.待收货 {
  background: #fff3cd;
  color: #856404;
}

.order-status.已完成 {
  background: #d4edda;
  color: #155724;
}

.order-status.已取消 {
  background: #f8d7da;
  color: #721c24;
}

/* 商品列表 */
.goods-list {
  padding: 20rpx 30rpx;
}

.goods-item {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.goods-item:last-child {
  margin-bottom: 0;
}

.goods-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  overflow: hidden;
  flex-shrink: 0;
}

.goods-image image {
  width: 100%;
  height: 100%;
}

.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-name {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  margin-bottom: 8rpx;
}

.goods-price {
  font-size: 26rpx;
  color: #ff6b6b;
  font-weight: 600;
}

.goods-num {
  font-size: 24rpx;
  color: #999;
  margin-left: 12rpx;
}

/* 订单底部 */
.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.total-price {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}

.order-actions {
  display: flex;
  gap: 12rpx;
}

/* 加载遮罩 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 999;
  color: #fff;
  font-size: 28rpx;
}

.loading-overlay text {
  margin-top: 20rpx;
}