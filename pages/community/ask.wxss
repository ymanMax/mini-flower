/* pages/community/ask.wxss */
.ask-page {
  background: #f5f5f5;
  min-height: 100vh;
}

.ask-content {
  padding: 20rpx;
}

.image-upload {
  margin-top: 20rpx;
  padding: 0 20rpx;
}

.upload-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.submit-btn-wrapper {
  padding: 40rpx 20rpx;
}

.submit-btn {
  background: #c03131;
  border: none;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
}

.submit-btn::after {
  border: none;
}

.submit-btn[disabled] {
  background: #ccc;
}
