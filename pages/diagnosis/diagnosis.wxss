.diagnosis-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
}

.upload-area {
  margin-bottom: 30rpx;
}

.diagnose-button {
  margin-bottom: 30rpx;
  width: 100%;
}

.result-section {
  margin-top: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
  padding: 0 10rpx;
}

.result-card {
  margin-bottom: 20rpx;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.result-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.result-tag {
  font-size: 24rpx;
}

.result-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 15rpx;
  line-height: 1.5;
}

.result-solution {
  background-color: #f9f9f9;
  padding: 15rpx;
  border-radius: 8rpx;
}

.solution-title {
  font-size: 26rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
}

.solution-content {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}
