/* 顶部筛选栏 */
.filter-bar {
  display: flex;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
  padding: 20rpx 30rpx;
}

.filter-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  display: flex;
  align-items: center;
  justify-content: center;
}

.filter-item text {
  margin-right: 8rpx;
}

/* 分类标签 */
.category-tabs {
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
  padding: 20rpx 0;
}

.category-scroll {
  white-space: nowrap;
  padding: 0 30rpx;
}

.category-tab {
  display: inline-block;
  padding: 12rpx 30rpx;
  margin-right: 20rpx;
  background: #f5f5f5;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #666;
}

.category-tab.active {
  background: #ff6b6b;
  color: #fff;
}

/* 商品列表 */
.goods-list {
  padding: 20rpx 30rpx;
  background: #fafafa;
  min-height: 100vh;
}

.goods-item {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 商品图片 */
.goods-image {
  position: relative;
  width: 100%;
  height: 400rpx;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.goods-image image {
  width: 100%;
  height: 100%;
}

.goods-tags {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.tag {
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  color: #fff;
}

.tag.hot {
  background: rgba(255, 107, 107, 0.8);
}

.tag.new {
  background: rgba(72, 187, 120, 0.8);
}

.collect-btn {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  color: #fff;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 50%;
  padding: 10rpx;
}

/* 商品信息 */
.goods-info {
  margin-bottom: 20rpx;
}

.goods-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.goods-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.goods-sales {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.goods-price {
  display: flex;
  align-items: baseline;
  gap: 16rpx;
}

.current-price {
  font-size: 36rpx;
  font-weight: 600;
  color: #ff6b6b;
}

.original-price {
  font-size: 26rpx;
  color: #999;
  text-decoration: line-through;
}

/* 添加到购物车按钮 */
.add-cart-btn {
  align-self: flex-start;
  background: #ff6b6b !important;
  border-radius: 8rpx !important;
  font-size: 26rpx !important;
  padding: 12rpx 30rpx !important;
}

/* 加载更多 */
.loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
  font-size: 26rpx;
  color: #999;
}

.loading-more text {
  margin-left: 16rpx;
}

/* 没有更多数据 */
.no-more {
  text-align: center;
  padding: 40rpx 0;
  font-size: 26rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  gap: 20rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
}

/* 筛选面板 */
.filter-panel {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.panel-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.panel-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.panel-content {
  flex: 1;
  padding: 30rpx;
  overflow-y: auto;
}

.filter-group {
  margin-bottom: 40rpx;
}

.filter-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.price-range {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.price-range text {
  font-size: 26rpx;
  color: #666;
  min-width: 80rpx;
}

.panel-footer {
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

/* 排序面板 */
.sort-panel {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.sort-item {
  padding: 30rpx;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #f0f0f0;
  text-align: center;
}

.sort-item.active {
  color: #ff6b6b;
  background: #fff5f5;
}