.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 20rpx;
}

.page-header {
  background-color: #fff;
  padding: 30rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.subtitle {
  display: block;
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #666;
}

.design-list {
  padding: 0 20rpx;
}

.design-item {
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.design-image {
  width: 100%;
  height: 300rpx;
  object-fit: cover;
}

.design-info {
  padding: 30rpx;
}

.design-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.design-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.price {
  font-size: 32rpx;
  color: #c03131;
  font-weight: bold;
}

.style-tag {
  background-color: #f0f0f0;
  color: #666;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.design-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 20rpx;
}

.design-items {
  margin-bottom: 30rpx;
}

.items-label {
  display: block;
  font-size: 26rpx;
  color: #999;
  margin-bottom: 15rpx;
}

.items-list {
  padding-left: 20rpx;
}

.item {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.order-btn {
  background-color: #c03131;
  color: #fff;
  border-radius: 50rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  border: none;
}

.order-btn::after {
  border: none;
}
